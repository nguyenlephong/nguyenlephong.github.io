{
  "compilerOptions": {
    "target": "ES6",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "include": [
    "**/*.jsx",
    "**/*.js",
    "**/*.json",
    "**/*.scss"
  ],
  "exclude": [
    ".next",
    "dist",
    "build",
    "node_modules"
  ]
}
